<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/{{ app }}/css/style.css">
    <link rel="stylesheet" href="/{{ app }}/css/ReHome.css">
    <link rel="stylesheet" href="/{{ app }}/css/Hamburger.css">
	<link rel="stylesheet" href="/{{ app }}/css/loginPage.css">
	<link rel="stylesheet" href="/{{ app }}/css/myDevices.css">
	<link rel="stylesheet" href="/{{ app }}/css/philipsHueLightBulb.css">
    <link rel="stylesheet" href="/{{ app }}/css/usageStatistics.css">
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
    <header>
		<div id="nav-drawer">
			<img src="/{{ app }}/images/Menu.png" id="menuImage" width=60px height=60px class="btn_menu_drawer head">
			<nav>
			    <div id="user"><br>
					<!-- <img src="/{{ app }}/images/Menu.png" id="menuImageClose" width=60px height=60px class="btn_menu_drawer"> -->
			        <img src="/{{ app }}/images/My_Profile_Icon.png" id="userImage" width=60px height=60px><br><br>
					<label id="userName">{{ current_user.username }}</label>
			    </div>
			    <div id="menuButtons">
					<button class="btn_menu"><img src="/{{ app }}/images/My_Profile_Button.png" class="menuIcon" align="center"><span class="menuText">My Profile</span></button>
					<button class="btn_menu"><img src="/{{ app }}/images/Help_Icon.png" class="menuIcon" align="center"><span class="menuText">Help</span></button>
					<button class="btn_menu"><img src="/{{ app }}/images/Support_Icon.png" class="menuIcon" align="center"><span class="menuText">Support</span></button>
					<button class="btn_menu"><img src="/{{ app }}/images/Devices_Icon.png" class="menuIcon" align="center" id="supportedDevicesIcon"><span class="menuText" id="supportedDevicesText">Supported Devices</span></button>
					<a href="/{{ app }}/logout"><button class="btn_menu"><img src="/{{ app }}/images/Logout_Icon.png" class="menuIcon" align="center"><span class="menuText">Logout</span></button></a>
					<input type="button" value="Close Menu" class="btn_menu_drawer btn_menu" id="closeButton">
	    		</div>
			</nav>
			<img src="/{{ app }}/images/IoD_Logo.png" id="logoImage" width=180px height=100px class="head">
			<a href="/{{ app }}/logout"><img src="/{{ app }}/images/Home.png" id="homeImage" width=60px height=60px class="head"></a>
		</div>
	</header>
    {% for message in flash_messages %}
        <div class="alert alert-{{ message.type }}">
            {{ message.body }}
        </div>
    {% endfor %}

    {% block body %}
    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
    <script>
        $(function(){
            $('#homeImage').attr('src', "/{{ app }}/images/home.png");
            $('#menuImage').attr('src', "/{{ app }}/images/Menu.png");
            $('.btn_menu_drawer').click(function(){
                $('nav').toggleClass('open');
            });
        });
    </script>

    {% block footer %}
    {% endblock %}
</body>
</html>