{% extends "base.html.twig" %}
{% block title %}Sign up{% endblock %}

{% block footer %}
    <script src="/{{ app }}/public/js/hideShowPassword.min.js"></script>
    <script src="/{{ app }}/public/js/app.js"></script>

    <script>

        $(document).ready(function() {
            /**
             * sets up validation on our form
             */
            $('#formSignup').validate({
                rules: {
                    username: 'required',
                    email: {
                        required: true,
                        email: true,
                        remote: '/{{ app }}/accounts/validate-email'
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        validPassword: true
                    },
                    password_confirmation: {
                        equalTo: '#inputPassword'
                    }
                },
                messages: {
                    email: {
                        remote: 'email already taken'
                    }
                }
            });

            /**
             * Show passowrd toggle button
             */
            $('#inputPassword').hideShowPassword({
                show: false,
                innerToggle: 'focus'
            });
            $('#inputPasswordConfirmation').hideShowPassword({
                show: false,
                innerToggle: 'focus'
            });
        });
    </script>

{% endblock %}

{% block body %}

    <!-- <h1>Sign up</h1> -->

    {% if user.errors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in user.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <div class="mainPanel">
        <div class="signUpPanel formatter">
        <form method="post" action="/{{ app }}/accounts/create" id="formSignup" class="signUpForm"><br><br>
            <!-- <label for="inputName">Username</label> -->
            <input id="inputName" class="signUpForm__info" name="username" placeholder="Username" value="{{ user.username }}" autofocus required /><br><br>
            <!-- <label for="inputEmail">Email address</label> -->
            <input id="inputEmail" class="signUpForm__info" name="email" placeholder="Email Address" value="{{ user.email }}" required type="email" /><br><br>
            <!-- <label for="inputPassword">Password</label> -->
            <input type="password" class="signUpForm__info signUpForm__info-margin-125125" id="inputPassword" name="password" placeholder="Password" required /><br><br>
            <!-- <label for="inputPasswordConfirmation">Password Confirmation</label> -->
            <input type="password" class="signUpForm__info signUpForm__info-margin-125125" id="inputPasswordConfirmation" name="password_confirmation" placeholder="Repeat Password" required /><br>
