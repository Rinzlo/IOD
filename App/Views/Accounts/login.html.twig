{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}

    <h1>Login</h1>
    <form action="/{{ app }}/Accounts/loggedin" method="post">
        <div>
            <label for="inputEmail">Email address</label>
            <input type="email" id="inputEmail" name="email" placeholder="Email address" autofocus value="{{ email }}"/>
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" id="inputPassword" name="password" placeholder="Password" />
        </div>
        <div>
            <label>
                <input type="checkbox" name="remember_me" {% if remember_me %} checked="checked" {% endif %} /> Remember me
            </label>
        </div>

        <div class="g-recaptcha" data-sitekey="{{ public }}"></div>

        <button type="submit">Log in</button>
        <a href="/{{ app }}/password/forgot">Forgot password?</a>
    </form>

    <a href="/{{ app }}/accounts/register">Register</a>
{% endblock %}